# Erigon Configuration Template (YAML)
# This template uses Jinja2 variables that should be populated by Ansible or another templating engine.
# The values for these keys will be substituted with the corresponding Ansible variables.

# Data Storage
# Corresponds to --datadir
datadir: "{{ erigon_dir_data }}"
# Corresponds to --ethash.dagdir
ethash.dagdir: "{{ erigon_dir_ethash_dag }}"
# Corresponds to --database.verbosity
database.verbosity: "{{ erigon_database_verbosity }}"

# Beacon

# Logging
# Corresponds to --log.json
log.json: "{{ erigon_log_json }}"
# Corresponds to --log.console.json
log.console.json: "{{ erigon_log_console_json }}"
# Corresponds to --verbosity and --log.console.verbosity
log.console.verbosity: "{{ erigon_log_console_verbosity }}"
# Corresponds to --log.dir.path
log.dir.path: "{{ erigon_dir_log }}"
# Corresponds to --log.dir.json
log.dir.json: "{{ erigon_log_dir_json }}"
# Corresponds to --log.dir.disable
log.dir.disable: "{{ erigon_log_dir_disable }}"
# Corresponds to --log.dir.prefix
log.dir.prefix: "{{ erigon_log_dir_prefix }}"
# Corresponds to --log.dir.verbosity
log.dir.verbosity: "{{ erigon_log_dir_verbosity }}"
# Corresponds to --log.delays
log.delays: "{{ erigon_log_delays }}"

# Pruning Presets
# Corresponds to --prune.mode
prune.mode: "{{ erigon_prune_mode }}"

### prune.mode=archive
# Corresponds to --prune.distance
